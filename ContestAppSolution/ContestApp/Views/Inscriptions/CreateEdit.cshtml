@model  ContestApp.Models.InscriptionViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateEdit", "Inscriptions"))
{
    @Html.AntiForgeryToken()
@Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <h4>Inscription</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Epreuve
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.epreuveId, Model.ListeEpreuveForSelectList, "Veuillez sélectionner une ville")
                @Html.ValidationMessageFor(model => model.epreuveId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
