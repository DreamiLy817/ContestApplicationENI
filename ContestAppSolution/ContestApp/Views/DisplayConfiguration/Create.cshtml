@using ContestApp.Models;
@model ContestApp.Models.DisplayConfigurationViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Configuration de l'affichage</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h4>Choisir l'unité de mesure :</h4>
        <div class="form-group">

            <div class="col-md-6">

                @Html.RadioButtonFor(model => model.UniteMesure, UniteMesure.Miles, new { id = UniteMesure.Miles })
                @Html.Label("Miles", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-6">

                @Html.RadioButtonFor(model => model.UniteMesure, UniteMesure.Metres, new { id = UniteMesure.Metres })
                @Html.Label("Metres", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            @Html.ValidationMessageFor(model => model.UniteMesure, "", new { @class = "text-danger" })
        </div>

        <h4>Choisir l'unité de temps :</h4>
        <div class="form-group" data-toggle="buttons">

            <div class="col-md-10">
                @* @Html.RadioButtonFor(model => model.ParSeconde, "ParSeconde", new { name = "time" })
                        @Html.LabelFor(model => model.ParSeconde, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValidationMessageFor(model => model.ParSeconde, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        @Html.RadioButtonFor(model => model.ParMinute, "ParMinute", new { name = "time" })
                        @Html.LabelFor(model => model.ParMinute, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValidationMessageFor(model => model.ParMinute, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        @Html.RadioButtonFor(model => model.ParHeure, "ParHeure", new { name = "time" })
                        @Html.LabelFor(model => model.ParHeure, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValidationMessageFor(model => model.ParHeure, "", new { @class = "text-danger" })*@
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>




}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

